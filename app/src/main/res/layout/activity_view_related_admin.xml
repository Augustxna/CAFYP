<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.ViewRelatedAdmin"
    android:padding="30dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/viewrelatedadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/back_icon"
                    android:layout_weight="0.15"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"/>

                <LinearLayout
                    android:layout_weight="0.15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_page_icon" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/relatedadmin_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/muli_black"
        android:text="Example"
        android:textColor="@color/blue2"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Name"
            android:textColor="@color/blue4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/relatedadmin_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightWhite"
            android:gravity="end"
            android:text="example"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="Email"
            android:textColor="@color/blue4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/relatedadmin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightWhite"
            android:gravity="end"
            android:text="example"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Phone Number"
                android:textColor="@color/blue4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/relatedadmin_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightWhite"
                android:gravity="end"
                android:text="example"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Invitation Code"
                android:textColor="@color/blue4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/relatedadmin_invicode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightWhite"
                android:gravity="end"
                android:text="example"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

        <Button
            android:id="@+id/mainmenu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Back To Main Menu"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@color/lightblue"
            android:textColor="@color/white"/>


    </LinearLayout>

</ScrollView>