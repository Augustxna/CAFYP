<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.RelatedMemberControl"
    android:padding="30dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/back_icon"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"/>

                <LinearLayout
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_page_icon" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member's Details"
                android:textSize="40sp"
                android:textColor="@color/blue2"
                android:fontFamily="@font/muli_black"
                android:layout_marginBottom="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="Member's Name"
                    android:textColor="@color/blue4"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/relatedmembercontrol_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightWhite"
                    android:gravity="right"
                    android:text="chitan"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's password"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_password"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's IC"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_icno"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's Phone Number"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_phoneno"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's Email"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_email"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day of Birth"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_date"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's Address"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_address"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's Invitation Code"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_code"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member's Related Admin"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relatedmembercontrol_resadminid"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/admin_viewrelatedheirs_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heirs"
                android:layout_weight="0.33"
                android:layout_margin="5dp"
                android:background="@color/lightblue"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/admin_viewrelatedpayment_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:layout_weight="0.33"
                android:layout_margin="5dp"
                android:background="@color/lightblue"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/admin_updaterelatedmember_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_weight="0.33"
                android:layout_margin="5dp"
                android:background="@color/lightblue"
                android:textColor="@color/white"/>


        </LinearLayout>

        </LinearLayout>
</ScrollView>
