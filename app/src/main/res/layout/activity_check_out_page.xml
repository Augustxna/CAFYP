<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMember.CheckOutPage"
    android:padding="30dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/back_icon"
                    android:layout_weight="0.1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"/>

                <LinearLayout
                    android:layout_weight="0.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/home_page_icon" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:textSize="50sp"
            android:textColor="@color/blue2"
            android:fontFamily="@font/muli_black"
            android:layout_marginBottom="60dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue4"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="25sp"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/blue4"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/checkout_payment_name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="fee"
            android:textSize="25sp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/muli"
            android:textColor="@color/black"
            android:background="@color/lightWhite"/>
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cost (RM)"
            android:textSize="25sp"
            android:fontFamily="@font/muli_black"
            android:textColor="@color/blue4"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/checkout_payment_cost"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textSize="25sp"
            android:textAlignment="textEnd"
            android:fontFamily="@font/muli"
            android:textColor="@color/blue2"
            android:background="@color/lightWhite" />

    </LinearLayout>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue4"
            android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

        <Button
            android:id="@+id/check_out_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay By Stripe"
            android:layout_margin="10dp"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:background="@color/lightblue"/>

            <Button
                android:id="@+id/check_out_by_razor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay By Razor"
                android:layout_margin="10dp"
                android:layout_weight="0.5"
                android:textColor="@color/white"
                android:background="@color/lightblue"/>


        </LinearLayout>


    </LinearLayout>


</ScrollView>