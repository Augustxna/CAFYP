<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMain.Reportread"
    android:padding="30dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/back_icon"
                        android:layout_weight="0.1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"/>

                    <LinearLayout
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/home_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_page_icon" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment's Report"
                android:textSize="40sp"
                android:textColor="@color/blue2"
                android:fontFamily="@font/muli_black"
                android:layout_marginBottom="60dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/muli"
                    android:text="Payment's ID"
                    android:textColor="@color/blue4"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/paymentreport_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lightWhite"
                    android:gravity="right"
                    android:text="chitan"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment's Name"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentreport_name"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment's Cost (RM)"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentreport_cost"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment's Created Date"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentreport_date"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment's Description"
                    android:fontFamily="@font/muli"
                    android:textColor="@color/blue4"
                    android:textSize="20sp"/>

                <TextView
                    android:background="@color/lightWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentreport_description"
                    android:text="chitan"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Number"
                        android:fontFamily="@font/muli"
                        android:textColor="@color/blue4"
                        android:textSize="20sp"/>

                    <TextView
                        android:background="@color/lightWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/paymentreport_paymentnumber"
                        android:text="null"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Payment (RM)"
                        android:fontFamily="@font/muli"
                        android:textColor="@color/blue4"
                        android:textSize="20sp"/>

                    <TextView
                        android:background="@color/lightWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/paymentreport_totalpayment"
                        android:text="null"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>