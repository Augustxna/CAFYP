<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMain.CreateAdminForm"
    android:padding="30dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/CreateAdminPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/back_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:src="@drawable/back_icon"
                        android:layout_weight="0.1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"/>

                    <LinearLayout
                        android:layout_weight="0.1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/home_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/home_page_icon" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_marginTop="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Admin Form"
                android:fontFamily="@font/muli_black"
                android:textSize="50sp"
                android:textColor="@color/blue2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin's Name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin's Username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"/>


            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_ic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin's IC"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin's Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_phonenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin's Phone Number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin's password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/put_admin_confirmpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:hintTextColor="@color/blue4"
                android:textColorHint="@color/blue4"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue2"
                app:boxStrokeWidthFocused="2dp"
                app:boxStrokeColor="@color/blue4">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"/>


            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="5dp">

                <TextView
                    android:text="Invitation Code : "
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:fontFamily="@font/muli_black"
                    android:padding="10dp"/>

                <TextView
                    android:id="@+id/put_admin_invitationcode"
                    android:text="samplecode"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@color/lightWhite"
                    android:padding="10dp"/>


            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/create_admin_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/lightblue"
            android:textColor="@color/white"
            android:text="Create"
            android:fontFamily="@font/muli_black"/>

    </LinearLayout>

</ScrollView>